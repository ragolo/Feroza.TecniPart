@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="panel-heading">
    </div>
    <div class="panel-body">
        <div class="smart-table-container">
            <table st-safe-src="vm.referencias.referenciasListar" st-table="referenciasTable" class="smart-table table">
                <thead>
                    <tr>
                        <th>Código OEM</th>
                        <th>Código Fabricación</th>
                        <th>Referencia VP</th>
                        <th>Kit</th>
                        <th>Descripción</th>
                        <th>Descripción Técnica</th>
                        <th>Tipo Producto</th>
                        <th>Marca</th>
                        <th>Imagen</th>
                        <th>Cantidad</th>
                        <th>Uni. Medida</th>
                        <th style="text-align: center">
                            <md-button class="md-icon-button" ng-click="vm.add()">
                                <md-tooltip md-direction="bottom">
                                    Agregar
                                </md-tooltip>
                                <md-icon md-svg-icon="Content/img/material-design-icons/content/svg/production/ic_add_24px.svg"></md-icon>
                            </md-button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="referencias in referenciasTable">
                        <td>{{referencias.CodigoOEM}}</td>
                        <td>{{referencias.CodigoFabricacion}}</td>
                        <td>{{referencias.ReferenciaVP}}</td>
                        <td>
                            <md-checkbox aria-label="Kit" ng-model="referencias.EsKit" disabled style="margin-bottom: 0">
                            </md-checkbox>
                        </td>
                        <td>{{referencias.Descripcion}}</td>
                        <td>{{referencias.DescripcionTecnica}}</td>
                        <td>{{referencias.MarcasTiposProductos.TiposProductos.Nombre}}</td>
                        <td>{{referencias.MarcasTiposProductos.Marcas.Nombre}}</td>
                        <td>{{referencias.Imagen}}</td>
                        <td>{{referencias.Cantidad}}</td>
                        <td>{{referencias.IdUnidadesMedidas}}</td>
                        <td style="width: 20%; text-align: center">

                            <md-button aria-label="Editar" class="md-icon-button" ng-click="vm.edit(referencias)">
                                <md-tooltip md-direction="bottom">
                                    Editar
                                </md-tooltip>
                                <md-icon md-svg-icon="Content/img/material-design-icons/content/svg/production/ic_create_24px.svg"></md-icon>
                            </md-button>
                            <md-button aria-label="Eliminar" class="md-icon-button" ng-click="vm.del(referencias)">
                                <md-tooltip md-direction="bottom">
                                    Eliminar
                                </md-tooltip>
                                <md-icon md-svg-icon="Content/img/material-design-icons/content/svg/production/ic_delete_sweep_24px.svg"></md-icon>
                            </md-button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="12" class="text-center">
                            <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>