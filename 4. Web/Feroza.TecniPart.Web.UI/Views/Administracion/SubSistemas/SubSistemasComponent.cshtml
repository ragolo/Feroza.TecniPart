@{
    Layout = null;
}
<form name="subSistemasComponentForm">

    <div class="card">
        <div class="card-heading bg-primary">
            <div class="pull-right">
                <em class="icon-layers fa-2x"></em>
            </div>
            <div class="card-title">Guardar</div>
        </div>

        <div class="card-body">
            <div layout="row" layout-xs="column" layout-sm="column" layout-align="space-between center">
                <div flex-gt-sm="100">
 
                    <div layout-gt-sm="row">
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Sistemas</label>
                            <md-select aria-required="true" md-no-asterisk="false" name="subSistemasIdSistemas" ng-model="vm.subSistemas.IdSistemas" required  tabindex="1">
                                <md-option ng-value=""><em>[Seleccionar]</em></md-option>
                                <md-option ng-repeat="sistema in vm.subSistemas.SistemasList" ng-value="sistema.IdSistemas">
                                    {{sistema.Descripcion}}
                                </md-option>
                            </md-select>
                            <div multiple ng-messages="subSistemasComponentForm.subSistemasIdSistemas.$error" role="alert">
                                <div ng-messages-include="~/app/custom/tecnipart/partials/messages.html"></div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Sub Sistema</label>
                            <input capitalize md-maxlength="100" name="subSistemasDescripcion" ng-model="vm.subSistemas.Descripcion" ng-pattern="/^[\w -]*$/" required tabindex="2" />
                            <div multiple ng-messages="subSistemasComponentForm.subSistemasDescripcion.$error" role="alert">
                                <div ng-message="pattern">Por favor solo use números o letras</div>
                                <div ng-messages-include="~/app/custom/tecnipart/partials/messages.html"></div>
                            </div>
                        </md-input-container>
                    </div>
                </div>
            </div>
        </div>

        <md-card-actions layout="row" layout-align="end center">
            <md-button aria-label="Cancelar" ng-click="vm.cancel()" tabindex="3"> Cancelar </md-button>
            <md-button aria-label="Guardar" ng-click="vm.save()" ng-disabled="subSistemasComponentForm.$invalid || subSistemasComponentForm.$pristine" tabindex="4"> Guardar </md-button>
        </md-card-actions>
    </div>
</form>